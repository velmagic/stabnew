<TMPL_INCLUDE FILE='head.tmpl'>
<!-- begin of cat.tmpl-->
  <title><TMPL_VAR NAME='title'></title>
  <meta name="description" content="<TMPL_VAR NAME="description">">
  <meta name="keywords" content="<TMPL_VAR NAME="keywords">">
    <script type="text/javascript" src="theme/js/isotope.pkgd.min.js"></script>
	 
	<script>
  $( document ).ready(function() {
	$('.isotope').isotope({
        itemSelector : '.brief',
	layoutMode: 'fitRows',
		masonry: {
      rowHeight: 135,
      gutter: 1
    }
      });
});
</script>
</head>

<body>
<div class="wrapper">
  <TMPL_INCLUDE FILE='header.tmpl'>
	<div class="middle">
		<div class="container">
			<main class="content">
				<h1><TMPL_VAR NAME='caption'></h1>
				<div class="isotope">
<TMPL_IF NAME='products'>
<TMPL_LOOP NAME='products'>
<qTMPL_IF NAME="showme">
  <div class="brief">
  <div class="inner_brief">
    <h2><a href="product.php?product=<TMPL_VAR NAME='code'>" title="<TMPL_VAR NAME='category'> <TMPL_VAR NAME='model'>"><TMPL_VAR NAME='category'><br> <TMPL_VAR NAME='trademark'> <TMPL_VAR NAME='model'></a></h2>
    <table>
    <tr>
      <td width="100%" align="center" rowspan="2">
        <a href="product.php?product=<TMPL_VAR NAME='code'>" title="<TMPL_VAR NAME='category'> <TMPL_VAR NAME='model'>"><img src="products/img/<TMPL_VAR NAME='image'>" alt="<TMPL_VAR NAME='category'> <TMPL_VAR NAME='model'>"></a>
      </td>
      <td align="center" height="40%">
         <div class="price"><TMPL_VAR NAME='price'>,-</div>
      </td>
    </tr>
    <tr>
      <td valign="top" style="vertical-align: center;">
         <a href="product.php?product=<TMPL_VAR NAME='code'>" class="more_info">Описание</a>
         <TMPL_IF NAME="available">
             <a href="javascript:undefined" class="buy one-click_buy" data-code="<TMPL_VAR NAME='code'>" data-image="<TMPL_VAR NAME='image_big'>" data-title="<TMPL_VAR NAME='category'> <TMPL_VAR NAME='trademark'> <TMPL_VAR NAME='model'>">Заказать</a>
         </TMPL_ELSE>
           <a class="notavalible" style="text-align:center; margin:5px 0;">Отсутствует</a>
         </TMPL_IF>
      </td>
    </tr>
    </table>
    <div style="text-align: left;display:block;">
    <TMPL_VAR NAME='description'>
    </div>
	 <div style="margin:1em 0 0 0;"><a href="product.php?product=<TMPL_VAR NAME='code'>" class="more_info"><button class="detail">Подробно</button></a></div>
  </div></div>
</qTMPL_IF> <!-- showme -->
</TMPL_LOOP>
	
<p style="clear:both;">


<TMPL_ELSE>
  <p><center>Нет товаров</center>
</TMPL_IF>
			</div> <!-- isotope -->
		</main>
	</div>	<!-- container -->

	<TMPL_INCLUDE FILE='aside.tmpl'>
	</div><!-- .middle-->

  <TMPL_INCLUDE FILE='oneclick-order-script.tmpl'>
	</div><!-- .middle-->
	<footer class="footer">
		  <TMPL_INCLUDE FILE='footer.tmpl'>
	</footer><!-- .footer -->
</div><!-- .wrapper -->

</body>

</html>
<!-- end of cat.tmpl--> 